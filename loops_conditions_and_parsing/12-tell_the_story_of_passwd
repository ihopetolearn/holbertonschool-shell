#!/usr/bin/env bash
# this is the only one that i got stuck 
while IFS=":" read -r username password uid gid info home shell; do
	  echo "Username: $username"
	    echo "GID: $gid"
	      echo "Home Directory: $home"
	        echo "Shell: $shell"
		  echo "UID's password: $password"
		    echo "Additional info: $info"
		      echo "---------------------"
	      done < "/etc/passwd"
