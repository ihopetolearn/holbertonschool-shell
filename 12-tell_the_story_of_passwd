#!/usr/bin/env bash                                                                 
# this was the difficult part                                                      
                                                                                    
while IFS=':' read -r username password uid gid info home shell; do 
	echo "the user $username is part of $gid gang,"
	echo "lives in $home and rides #shell"
	echo "uid's is place protected by the passcode $passwd"
	echo "more info about the user here:$info"                                                                                
  done<"/etc/passwd"  
